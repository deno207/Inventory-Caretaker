<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="200.0" prefWidth="400.0" stylesheets="/css/main.css">
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="top-bar">
        <Label fx:id="title" styleClass="main-menu"/>
    </HBox>

    <GridPane AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="70">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <Label fx:id="amountLabel" styleClass="large-text" GridPane.rowIndex="0" GridPane.columnIndex="0" wrapText="true"/>
        <TextField fx:id="amountInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="saveButton" AnchorPane.leftAnchor="80" AnchorPane.bottomAnchor="10" prefWidth="100"/>
    <Button text="Cancel" fx:id="cancelButton" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="80" prefWidth="100"/>

</AnchorPane>
